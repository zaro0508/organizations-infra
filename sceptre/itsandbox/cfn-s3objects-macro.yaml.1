AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: A Cloudformation macro to deploy objects to S3 buckets
Resources:
  ResourceFunction:
    Type: AWS::Serverless::Function
    Properties:
      Runtime: python2.7
      CodeUri: s3://essentials-awss3lambdaartifactsbucket-x29ftznj6pqw/850b05c34782c956c71c2966725b5653
      Handler: resource.handler
      Policies: AmazonS3FullAccess
  MacroFunction:
    Type: AWS::Serverless::Function
    Properties:
      Runtime: python3.6
      CodeUri: s3://essentials-awss3lambdaartifactsbucket-x29ftznj6pqw/e5425b4ca7f9cf293635fd4b4990afe6
      Handler: macro.handler
      Policies: AmazonS3FullAccess
      Environment:
        Variables:
          LAMBDA_ARN:
            Fn::GetAtt:
            - ResourceFunction
            - Arn
  Macro:
    Type: AWS::CloudFormation::Macro
    Properties:
      Name: S3Objects
      FunctionName:
        Fn::GetAtt:
        - MacroFunction
        - Arn
